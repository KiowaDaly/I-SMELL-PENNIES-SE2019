<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.MainController">
    <children>
        <Pane layoutX="3.0" layoutY="14.0" prefHeight="466.0" prefWidth="261.0">
            <children>
                <Button layoutX="82.0" layoutY="142.0" mnemonicParsing="false" onMouseClicked="#selectFile" text="Choose File">
                    <tooltip>
                        <Tooltip text="Select a Java source folder to analyse its efficiency" />
                    </tooltip></Button>
                <Label layoutX="45.0" layoutY="101.0" text="Select file or drag and drop" textOverrun="CENTER_ELLIPSIS" />
                <Pane fx:id="DropPane" layoutX="30.0" layoutY="207.0" onDragDropped="#handleDropEvent" onDragOver="#getDroppedFile" prefHeight="166.0" prefWidth="199.0" styleClass="pane2">
                    <children>
                        <Text layoutX="42.0" layoutY="89.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Drop Folder Here" />
                        <Line endX="100.0" layoutX="101.0" scaleX="1.1" startX="-100.0" />
                        <Line endX="100.0" layoutX="101.0" layoutY="166.0" scaleX="1.1" startX="-100.0" />
                        <Line endX="100.0" layoutX="1.0" layoutY="83.0" rotate="90.0" scaleX="0.9" startX="-100.0" />
                    </children>
                </Pane>
                <Line endX="100.0" layoutX="229.0" layoutY="290.0" rotate="90.0" scaleX="0.9" startX="-100.0" />
                <MenuBar fx:id="Menu" layoutX="-8.0" layoutY="-16.0" prefHeight="31.0" prefWidth="172.0">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Close" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete" />
                            </items>
                        </Menu>
                        <Menu fx:id="MenuHelp" mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem fx:id="Help" mnemonicParsing="false" text="Select a project source folder from your device \n to analyse its eficiency" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </Pane>
        <ListView fx:id="UnitLists" layoutX="264.0" layoutY="58.0" onMouseClicked="#displaySelectedAnalysis" prefHeight="538.0" prefWidth="200.0" />
        <Label layoutX="308.0" layoutY="37.0" text="Classes Analysed" />
        <Label fx:id="SmellLabel" alignment="CENTER" layoutX="632.0" layoutY="37.0" prefHeight="21.0" prefWidth="200.0" stylesheets="@baseScene.css" text="Smells" textAlignment="CENTER" AnchorPane.topAnchor="37.0" />
        <ImageView fitHeight="159.0" fitWidth="233.0" layoutX="54.0" layoutY="414.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../Pictures/pennies.gif" />
            </image></ImageView>
      <PieChart fx:id="pieChart" layoutX="645.0" layoutY="217.0" prefHeight="369.0" prefWidth="354.0" title="Smells Detected in Class">
         <effect>
            <DropShadow />
         </effect></PieChart>
      <ListView fx:id="SmellList" layoutX="639.0" layoutY="58.0" onMouseClicked="#updateProgressBar" prefHeight="159.0" prefWidth="187.0" />
      <ProgressBar fx:id="ThreatLevel" layoutX="826.0" layoutY="58.0" prefHeight="23.0" prefWidth="181.0" progress="0.0" />
      <Label alignment="CENTER" layoutX="877.0" layoutY="37.0" text="Threat Level" />
      <ListView fx:id="MethodList" layoutX="464.0" layoutY="58.0" prefHeight="310.0" prefWidth="181.0" />
      <Label fx:id="MethodsLabel" alignment="CENTER" layoutX="525.0" layoutY="37.0" text="Methods" />
    </children>
</AnchorPane>
